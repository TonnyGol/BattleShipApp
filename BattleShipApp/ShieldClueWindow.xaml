<Window x:Class="BattleShipApp.ShieldClueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Shield" Height="550" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FlowDirection="RightToLeft">

    <Border Background="#2D2D30" CornerRadius="15" BorderBrush="#00BFFF" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#00BFFF" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="🛡 הפעלת מגן" Foreground="#00BFFF" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                <Separator Background="#444" Margin="0,10" Width="400"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="בחר משבצת אחת של ספינה כדי להגן עליה." 
                       Foreground="#DDD" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Border Grid.Row="2" BorderBrush="#555" BorderThickness="2" Width="350" Height="350" 
                    HorizontalAlignment="Center" FlowDirection="LeftToRight">
                <UniformGrid x:Name="ShieldGrid" Rows="10" Columns="10" Background="Black"/>
            </Border>

            <Button Grid.Row="3" Content="ביטול" Height="35" Width="100" Margin="0,20,0,0" 
                    Background="#333" Foreground="White" BorderBrush="Gray" Click="CancelButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>