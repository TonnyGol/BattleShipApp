<Window x:Class="BattleShipApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShipApp"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        KeyDown="Window_KeyDown"
        >

    <Viewbox Stretch="UniformToFill">
        <Grid Width="2560" Height="1440">
            <Image Source="/resources/bg.jpg" Stretch="UniformToFill" x:Name="bgImage"/>
            <Image Source="/resources/redScreen.jpg" Stretch="Fill" Opacity="0.4" x:Name="opacityImage"/>
            <Image Source="/resources/border.png" Stretch="Fill" x:Name="borderImage"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="940" />
                    <RowDefinition Height="624"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#99000000" Margin="300,20" CornerRadius="20" BorderBrush="Gold" BorderThickness="2">
                    <Grid FlowDirection="RightToLeft">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🏆 ניקוד:" Foreground="#FFD700" FontSize="60" FontWeight="Bold" Margin="0,0,20,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="ScoreText" Text="0" Foreground="White" FontSize="60" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>

                        <Border Grid.Column="1" Width="4" Height="80" Background="#555" Margin="50,0"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="⏳ זמן:" Foreground="#00BFFF" FontSize="60" FontWeight="Bold" Margin="0,0,20,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock x:Name="TimerText" Text="60:00" Foreground="White" FontSize="60" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="315"/>
                        <ColumnDefinition Width="1979" />
                        <ColumnDefinition Width="199"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1" Margin="0,0,44,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- DRAW GRID CELLS -->
                        <!-- Row 0 -->
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="Black" x:Name="InstructionMark"
                                MouseLeftButtonDown="InstructionMark_MouseLeftButtonDown">
                            <Image Source="/resources/ExclamationMark.png" Stretch="Fill"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">1</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">2</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">3</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="4" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">4</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="5" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">5</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="6" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">6</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="7" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">7</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="8" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">8</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="9" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">9</TextBlock>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="10" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">10</TextBlock>
                        </Border>
                        <!--MouseLeftButtonDown="Border_MouseLeftButtonDown" Background="Transparent" -->

                        <!-- Rows 1–5 -->
                        <!-- Repeat pattern -->
                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">A</TextBlock>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="2" x:Name="B_1"/>
                        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="2" x:Name="B_2"/>
                        <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black" BorderThickness="2" x:Name="B_3"/>
                        <Border Grid.Row="1" Grid.Column="4" BorderBrush="Black" BorderThickness="2" x:Name="B_4"/>
                        <Border Grid.Row="1" Grid.Column="5" BorderBrush="Black" BorderThickness="2" x:Name="B_5"/>
                        <Border Grid.Row="1" Grid.Column="6" BorderBrush="Black" BorderThickness="2" x:Name="B_6"/>
                        <Border Grid.Row="1" Grid.Column="7" BorderBrush="Black" BorderThickness="2" x:Name="B_7"/>
                        <Border Grid.Row="1" Grid.Column="8" BorderBrush="Black" BorderThickness="2" x:Name="B_8"/>
                        <Border Grid.Row="1" Grid.Column="9" BorderBrush="Black" BorderThickness="2" x:Name="B_9"/>
                        <Border Grid.Row="1" Grid.Column="10" BorderBrush="Black" BorderThickness="2" x:Name="B_10"/>

                        <Border Grid.Row="2" Grid.Column="0" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">B</TextBlock>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="2" x:Name="B_11"/>
                        <Border Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="2" x:Name="B_12"/>
                        <Border Grid.Row="2" Grid.Column="3" BorderBrush="Black" BorderThickness="2" x:Name="B_13"/>
                        <Border Grid.Row="2" Grid.Column="4" BorderBrush="Black" BorderThickness="2" x:Name="B_14"/>
                        <Border Grid.Row="2" Grid.Column="5" BorderBrush="Black" BorderThickness="2" x:Name="B_15"/>
                        <Border Grid.Row="2" Grid.Column="6" BorderBrush="Black" BorderThickness="2" x:Name="B_16"/>
                        <Border Grid.Row="2" Grid.Column="7" BorderBrush="Black" BorderThickness="2" x:Name="B_17"/>
                        <Border Grid.Row="2" Grid.Column="8" BorderBrush="Black" BorderThickness="2" x:Name="B_18"/>
                        <Border Grid.Row="2" Grid.Column="9" BorderBrush="Black" BorderThickness="2" x:Name="B_19"/>
                        <Border Grid.Row="2" Grid.Column="10" BorderBrush="Black" BorderThickness="2" x:Name="B_20"/>

                        <Border Grid.Row="3" Grid.Column="0" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">C</TextBlock>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black" BorderThickness="2" x:Name="B_21"/>
                        <Border Grid.Row="3" Grid.Column="2" BorderBrush="Black" BorderThickness="2" x:Name="B_22"/>
                        <Border Grid.Row="3" Grid.Column="3" BorderBrush="Black" BorderThickness="2" x:Name="B_23"/>
                        <Border Grid.Row="3" Grid.Column="4" BorderBrush="Black" BorderThickness="2" x:Name="B_24"/>
                        <Border Grid.Row="3" Grid.Column="5" BorderBrush="Black" BorderThickness="2" x:Name="B_25"/>
                        <Border Grid.Row="3" Grid.Column="6" BorderBrush="Black" BorderThickness="2" x:Name="B_26"/>
                        <Border Grid.Row="3" Grid.Column="7" BorderBrush="Black" BorderThickness="2" x:Name="B_27"/>
                        <Border Grid.Row="3" Grid.Column="8" BorderBrush="Black" BorderThickness="2" x:Name="B_28"/>
                        <Border Grid.Row="3" Grid.Column="9" BorderBrush="Black" BorderThickness="2" x:Name="B_29"/>
                        <Border Grid.Row="3" Grid.Column="10" BorderBrush="Black" BorderThickness="2" x:Name="B_30"/>

                        <Border Grid.Row="4" Grid.Column="0" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">D</TextBlock>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" BorderBrush="Black" BorderThickness="2" x:Name="B_31"/>
                        <Border Grid.Row="4" Grid.Column="2" BorderBrush="Black" BorderThickness="2" x:Name="B_32"/>
                        <Border Grid.Row="4" Grid.Column="3" BorderBrush="Black" BorderThickness="2" x:Name="B_33"/>
                        <Border Grid.Row="4" Grid.Column="4" BorderBrush="Black" BorderThickness="2" x:Name="B_34"/>
                        <Border Grid.Row="4" Grid.Column="5" BorderBrush="Black" BorderThickness="2" x:Name="B_35"/>
                        <Border Grid.Row="4" Grid.Column="6" BorderBrush="Black" BorderThickness="2" x:Name="B_36"/>
                        <Border Grid.Row="4" Grid.Column="7" BorderBrush="Black" BorderThickness="2" x:Name="B_37"/>
                        <Border Grid.Row="4" Grid.Column="8" BorderBrush="Black" BorderThickness="2" x:Name="B_38"/>
                        <Border Grid.Row="4" Grid.Column="9" BorderBrush="Black" BorderThickness="2" x:Name="B_39"/>
                        <Border Grid.Row="4" Grid.Column="10" BorderBrush="Black" BorderThickness="2" x:Name="B_40"/>

                        <Border Grid.Row="5" Grid.Column="0" BorderBrush="Red" BorderThickness="2">
                            <TextBlock FontSize="100" HorizontalAlignment="Center">E</TextBlock>
                        </Border>
                        <Border Grid.Row="5" Grid.Column="1" BorderBrush="Black" BorderThickness="2" x:Name="B_41"/>
                        <Border Grid.Row="5" Grid.Column="2" BorderBrush="Black" BorderThickness="2" x:Name="B_42"/>
                        <Border Grid.Row="5" Grid.Column="3" BorderBrush="Black" BorderThickness="2" x:Name="B_43"/>
                        <Border Grid.Row="5" Grid.Column="4" BorderBrush="Black" BorderThickness="2" x:Name="B_44"/>
                        <Border Grid.Row="5" Grid.Column="5" BorderBrush="Black" BorderThickness="2" x:Name="B_45"/>
                        <Border Grid.Row="5" Grid.Column="6" BorderBrush="Black" BorderThickness="2" x:Name="B_46"/>
                        <Border Grid.Row="5" Grid.Column="7" BorderBrush="Black" BorderThickness="2" x:Name="B_47"/>
                        <Border Grid.Row="5" Grid.Column="8" BorderBrush="Black" BorderThickness="2" x:Name="B_48"/>
                        <Border Grid.Row="5" Grid.Column="9" BorderBrush="Black" BorderThickness="2" x:Name="B_49"/>
                        <Border Grid.Row="5" Grid.Column="10" BorderBrush="Black" BorderThickness="2" x:Name="B_50"/>
                    </Grid>
                </Grid>
            </Grid>

            <MediaElement x:Name="PlacementVideoPlayer"
                  Source="resources/Place_5_Ship.mp4"
                  LoadedBehavior="Manual" 
                  UnloadedBehavior="Close"
                  Stretch="UniformToFill"
                  Visibility="Visible"
                  Panel.ZIndex="200"
                  />

            <MediaElement Name="InstructionVideo"
                          Source="resources/Instructions.mp4"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Close"
                          Stretch="UniformToFill"
                          Visibility="Visible"        
                          MediaFailed="InstructionVideoFailed"
                          MediaEnded="InstructionVideo_MediaEnded"
                          Panel.ZIndex="100"/>

            <Grid x:Name="InitialScreen" Background="Black" Visibility="Visible">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                </StackPanel>
            </Grid>

        </Grid>
    </Viewbox>


</Window>
