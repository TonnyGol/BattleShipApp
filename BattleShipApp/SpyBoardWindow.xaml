<Window x:Class="BattleshipGame.SpyBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spy Satellite View" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True">

    <Border BorderBrush="Red" BorderThickness="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="SPY SATELLITE LIVE FEED" 
                       Background="Black" Foreground="Red" 
                       FontWeight="Bold" TextAlignment="Center" Padding="5"/>

            <UniformGrid Name="SpyGrid" Rows="10" Columns="10" Grid.Row="1" Background="LightCyan"/>
        </Grid>
    </Border>
</Window>