<Window x:Class="BattleShipApp.InstructionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="מקרא למשחק" Height="400" Width="500"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        AllowsTransparency="True" 
        WindowStyle="None" 
        Background="Transparent"
        FlowDirection="RightToLeft">

    <Border Background="#2D2D30" 
            CornerRadius="15" 
            BorderBrush="Gray" 
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">

        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10" Opacity="0.5"/>
        </Border.Effect>

        <Border.RenderTransform>
            <ScaleTransform ScaleX="0" ScaleY="0"/>
        </Border.RenderTransform>

        <Border.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                         To="1" Duration="0:0:0.4">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.6"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                         To="1" Duration="0:0:0.4">
                            <DoubleAnimation.EasingFunction>
                                <BackEase EasingMode="EaseOut" Amplitude="0.6"/>
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>

        <StackPanel Margin="20" VerticalAlignment="Center">

            <TextBlock Text="מקרא צבעים" Foreground="White" FontWeight="Bold" FontSize="22" 
                       HorizontalAlignment="Center" Margin="0,0,0,20" TextDecorations="Underline"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Border Width="30" Height="30" Background="Green" BorderBrush="White" BorderThickness="1" Margin="15,0,0,0"/>
                <TextBlock Text="פגיעה (בול)" Foreground="White" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Border Width="30" Height="30" Background="Red" BorderBrush="White" BorderThickness="1" Margin="15,0,0,0"/>
                <TextBlock Text="החטאה (מים)" Foreground="White" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                    <Border Width="20" Height="20" Background="Blue" BorderBrush="White" BorderThickness="1"/>
                    <Border Width="20" Height="20" Background="Blue" BorderBrush="White" BorderThickness="1"/>
                    <Border Width="20" Height="20" Background="Blue" BorderBrush="White" BorderThickness="1"/>
                </StackPanel>
                <TextBlock Text="ספינה טבועה" Foreground="White" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Width="30" Height="30" BorderBrush="White" BorderThickness="1" Margin="15,0,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="pack://application:,,,/resources/shieldInfo.png" Stretch="Uniform"/>
                    </Border.Background>
                </Border>
                <TextBlock Text="פגיעה בהגנה" Foreground="White" VerticalAlignment="Center" FontSize="16"/>
            </StackPanel>

            <Border BorderBrush="#555" BorderThickness="1" Padding="10" Background="#3E3E42" CornerRadius="5">
                <TextBlock Text="⚠ לא ניתן לירות באותה משבצת פעמיים" 
                           Foreground="Orange" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold"/>
            </Border>

            <Button Content="סגור" Height="35" Width="100" Margin="0,20,0,0" Click="CloseButton_Click"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Border>
</Window>